<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.xbyg_plus.silicon.view.IconTextView
            android:id="@+id/appInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App: Silicon\nAuthor: xbyg\nVersion: 0.1.0"
                android:textSize="20sp"
                />
        </com.xbyg_plus.silicon.view.IconTextView>

        <LinearLayout
            android:id="@+id/iconList"
            android:orientation="vertical"
            android:layout_below="@+id/appInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Attributions(all from Flaticon):"
                android:layout_margin="6dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/libraryList"
            android:orientation="vertical"
            android:layout_below="@id/iconList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Open source libraries:"
                android:layout_margin="6dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
